---
import { changeLanguage, t } from "i18next";
import RssReader from "@/components/RssReader";
import PageLayout from "@/layouts/PageLayout.astro";

changeLanguage("en");
---

<PageLayout title={t("rss.title")} description={t("rss.description")}>
  <RssReader client:load />
</PageLayout>
<style is:global lang="scss">
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }
  input {
    padding: 1rem;
    margin: 1rem;
    border: 1px solid var(--black);
    border-radius: 0.5rem;
    font-size: 1.5rem;
    width: 100%;
    max-width: 30rem;
    background-color: transparent;
  }
  #feed {
    .feed-item {
      margin-top: 2rem;
      cursor: pointer;
      button {
        all: unset;
      }
      h2 {
        margin-bottom: 0;
      }
    }
  }
  .dialog-panel {
    overflow-y: auto;
    padding-bottom: 4rem;
    position: relative;
  }
</style>
