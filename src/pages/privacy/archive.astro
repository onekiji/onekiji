---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/PageLayout.astro";
import FormatDate from "@/components/FormatDate.astro";

const latestPrivacyPolicy = await getCollection("privacy").then((collection) =>
  collection.sort((a, b) => (new Date(a.slug) < new Date(b.slug) ? 1 : -1))
);
---

<PageLayout title="Privacy Policy - One Kiji" description="">
  <h1>Privacy Policy Archive</h1>
  <ul>
    {
      latestPrivacyPolicy.map(({ data, slug }) => (
        <li>
          <p>
            <a href={`/privacy/${slug}`}>
              <FormatDate date={new Date(slug)} />
            </a>
          </p>
        </li>
      ))
    }
  </ul>
  <style>
    ul {
      list-style: none;
      padding: 0;
    }
  </style>
</PageLayout>
