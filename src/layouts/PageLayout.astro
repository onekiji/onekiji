---
import "@/styles/article.scss";
import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const props = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={props.title}
      description={props.description}
      image={props.image}
    />
    <style>
      body {
        padding-top: 24px;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
