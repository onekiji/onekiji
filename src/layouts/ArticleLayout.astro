---
import "@/styles/article.scss";
import BaseHead from "@/components/BaseHead.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const props = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <BaseHead
    title={props.title}
    description={props.description}
    image={props.image}
  />
  <body>
    <main>
      <article>
        <slot />
      </article>
    </main>
  </body>
</html>
